rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//               /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    
    // Avatar uploads - users can upload their own avatars
    match /avatars/users/{userId}/{allPaths=**} {
      allow read: if true; // Public read for all avatars
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Group images - group members can upload
    match /groups/{groupId}/{allPaths=**} {
      allow read: if true; // Public read for group images
      allow write: if request.auth != null; // Any authenticated user can upload to groups they're in
      allow delete: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
