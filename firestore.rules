rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all authenticated users (including anonymous/guest) to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow all authenticated users to access groups
    match /groups/{groupId} {
      allow read, create: if request.auth != null;
      // Allow update/delete if user is creator OR if they are joining (updating members array)
      allow update: if request.auth != null; 
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
      
      match /messages/{messageId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
    }
  }
}
