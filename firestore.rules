rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /groups/{groupId} {
      // Public groups are readable by everyone (authenticated).
      // Private groups are readable ONLY by the owner.
      allow read: if request.auth != null && (!resource.data.isPrivate || request.auth.uid == resource.data.ownerUid);
      
      // Creation allowed for authenticated users.
      allow create: if request.auth != null;
      
      // Update/Delete only by owner.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      
      match /messages/{messageId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
    }
  }
}
